{
    "compilerOptions": {
      "lib": ["ESNext"],
      "module": "esnext",
      "target": "esnext",
      "moduleResolution": "node",
      // "bun-types" is the important part
      "types": ["bun-types"],

      // Custom additions
      "allowSyntheticDefaultImports":true,

      // Local paths
      "paths": {
        "$src/*": ["./src/*"],
        "$lib/*": ["./src/lib/*"],
        "$user-context/*": ["./src/user-context/*"],
      },
    }
  }